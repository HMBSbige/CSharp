<Window x:Class="FWin10.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:FWin10"
		mc:Ignorable="d"
		Title="FWin10" Height="450" Width="800" Initialized="Window_Initialized">
	<Grid>
		<Button x:Name="RefleshButton" Content="Refresh" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="77" Click="RefleshButton_Click"/>
		<ComboBox x:Name="ChooseUpdateBox" HorizontalAlignment="Left" Margin="124,43,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.093,0.759" SelectionChanged="ChooseUpdateBox_SelectionChanged">
			<ComboBoxItem Content="从不检查"/>
			<ComboBoxItem Content="仅检查更新"/>
			<ComboBoxItem Content="检查并下载更新"/>
			<ComboBoxItem Content="自动安装更新"/>
		</ComboBox>
		<Label Content="Windows Update" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.456,-0.053"/>

	</Grid>
</Window>
